<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="460dp"
        android:fontFamily="cursive"
        android:paddingLeft="20dp"
        android:text="Hi there! I am Alex Merc, check out my portfolio to know me better!"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="73dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <!-- ImageButton 1 -->
        <ImageButton
            android:id="@+id/btnAcademics"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Academics"
            android:scaleType="fitCenter"
            android:src="@drawable/img_6" />

        <!-- ImageButton 2 -->
        <ImageButton
            android:id="@+id/btnHobbies"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Hobbies"
            android:scaleType="centerInside"
            android:src="@drawable/img_7" />

        <!-- ImageButton 3 -->
        <ImageButton
            android:id="@+id/btnProjects"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Projects"
            android:scaleType="centerInside"
            android:src="@drawable/img_8" />

        <!-- ImageButton 4 -->
        <ImageButton
            android:id="@+id/btnSkills"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Skills"
            android:scaleType="centerInside"
            android:src="@drawable/img_9" />

        <!-- ImageButton 5 -->
        <ImageButton
            android:id="@+id/btnAchievements"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Achievements"
            android:scaleType="centerInside"
            android:src="@drawable/img_11" />

        <!-- ImageButton 6 -->
        <ImageButton
            android:id="@+id/btnGallery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Gallery"
            android:scaleType="centerInside"
            android:src="@drawable/img_10" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
